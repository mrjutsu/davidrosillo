<h1>Listing Posts</h1>

<%= form_tag( filter_posts_posts_path, remote: true, id: "filter-posts" ) do %>
  <%= hidden_field_tag :authenticity_token, value: form_authenticity_token %>
  <%= radio_button_tag :p_filter, 0, false, { id: "life" } %>
  <label for="life">Life</label>
  <br>
  <%= radio_button_tag :p_filter, 1, false, { id: "how-to" } %>
  <label for="how-to">How To</label>
  <br>
  <%= radio_button_tag :p_filter, 2, false, { id: "opinion" } %>
  <label for="opinion">Opinion</label>
  <br>
  <%= radio_button_tag :p_filter, 3, false, { id: "games" } %>
  <label for="games">Games</label>
  <br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.body.html_safe %></td>
        <td><%= post.category.name %></td>
        <td><%= link_to 'Show', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
