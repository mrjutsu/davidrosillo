<h1>Listing Posts</h1>

<%= form_tag( posts_path, remote: true, id: "filter-posts" ) do %>
  <%= hidden_field_tag :authenticity_token, value: form_authenticity_token %>
  <%= radio_button_tag :p_filter, 1, true, { id: "life" } %>
  <label for="life">Life</label>
  <br>
  <%= radio_button_tag :p_filter, 2, true, { id: "how-to" } %>
  <label for="how-to">How To</label>
  <br>
  <%= radio_button_tag :p_filter, 3, true, { id: "games" } %>
  <label for="games">Games</label>
  <br>
  <%= radio_button_tag :p_filter, 4, true, { id: "opinion" } %>
  <label for="opinion">Opinion</label>
  <br>
  <%= radio_button_tag :p_filter, 0, true, { id: "all" } %>
  <label for="all">All</label>
  <br>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Body</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="posts-div">
    <!-- <div id="posts-div"> -->
      <%= render partial: 'posts', collection: @posts, as: :post %>
    <!-- </div> -->
  </tbody>
</table>

<br>
