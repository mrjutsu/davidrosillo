<article class="post">
	<hr>
	<h2>
		<%= link_to post.name, post_path(post.id) %>
	</h2>
	<i class="fa fa-tags post-tag">
		<span>
			<%= post.category.name %>
		</span>
	</i>
	<span>
		<%= post.body.truncate(500).html_safe %>
	</span>
	<p>
		<strong><%= link_to 'Read More', post_path(post.id) %></strong>
	</p>
</article>