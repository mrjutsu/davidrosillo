	</head>
	<body>
		<nav>
			<h1>
				<%= link_to 'David Rosillo', root_path %>
			</h1>
			<%= link_to 'Blog', posts_path %>
			<%= link_to 'Portfolio', portfolios_path %>
			<%= link_to 'About Me', about_landings_path %>
			<%= link_to 'Contact', new_contact_path %>
		</nav>
		<section class="left-info"></section>
		<section class="content">
			<%= yield %>
		</section>

		<footer>
			© David Rosillo –– <%= Time.now.year %>
		</footer>

